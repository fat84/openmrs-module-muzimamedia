<?xml version="1.0" encoding="UTF-8"?>

<module configVersion="1.2">

	<!-- Module Properties -->
	<id>muzimamedia</id>
	<name>muzimamedia Module</name>
	<version>1.0-SNAPSHOT</version>
	<package>org.openmrs.module.muzimamedia</package>
	<author>Sahaj software solution</author>
	<description>
		OpenMRS module project for muzima media
	</description>
	<updateURL>https://modules.openmrs.org/modules/download/muzimamedia/update.rdf</updateURL>
	<require_version>1.8.2</require_version>
	<!-- / Module Properties -->

	
	<!-- Module Activator -->
	<activator>org.openmrs.module.muzimamedia.muzimamediaActivator</activator>
	
	
	<!-- Adds link to admin page -->
	<extension>
		<point>org.openmrs.admin.list</point>
		<class>org.openmrs.module.muzimamedia.extension.html.AdminList</class>
	</extension>
	
	<!-- Maps hibernate file's, if present -->
	<mappingFiles>
        MuzimaMedia.hbm.xml
        MuzimaMediaTag.hbm.xml
	</mappingFiles>

    <require_modules>
        <require_module version="2.0">org.openmrs.module.webservices.rest</require_module>
    </require_modules>

	<!-- Internationalization -->
	<!-- All message codes should start with muzimamedia. -->
	<messages>
		<lang>en</lang>
		<file>messages.properties</file>
	</messages>
	<messages>
		<lang>fr</lang>
		<file>messages_fr.properties</file>
	</messages>
	<messages>
		<lang>es</lang>
		<file>messages_es.properties</file>
	</messages>
	<!-- /Internationalization -->

</module>

